{
  "name": "cactus-media-viewer",
  "version": "2.0.0",
  "description": "Extremely minimal randomized order media reviewer built with React",
  "main": "src/server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && node src/server.js -d $@",
    "start:dev": "concurrently \"npm run dev\" \"node src/server.js -d ./test-media -p 3000\"",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "bin": {
    "cactus": "./src/server.js"
  },
  "keywords": [
    "media",
    "viewer",
    "photos",
    "videos",
    "react",
    "random",
    "slideshow"
  ],
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "express": "^4.18.2",
    "minimist": "^1.2.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "MIT"
}
